@{
    ViewBag.Title = "Add_Fund";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
<script  type="text/javascript">
    function updata() {
        var usercode = $('#usercode option :selected').text();
        var updatedata = $('#txtaddfund').val();

        $.post('/UserName/createuservalidate', { updatedata: usercode, usercode: updatedata },
        function (data) { chkval(data); }).error(function (data) { chkval(data); });
    }
    function chkval(abc) {
        alert(abc);
    }
</script>
<h2>Add_Fund</h2>


<div>
<table>
<tr>
<td>SELECT USER</td>
<td><select id = "usercode">

</select></td>
<td>ADD FUND</td>
<td>
    <input id="txtaddfund" type="text" />
</td>

</tr>
<tr>
<td>
    <input id="btnsave" onclick = "updata()" type="button" value="SAVE" />
    <input id="btncalcel" type="button"  value="CANCEL" />
</td>
</tr>
</table>
</div>