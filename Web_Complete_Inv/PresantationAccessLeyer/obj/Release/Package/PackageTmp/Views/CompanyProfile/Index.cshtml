    }

    function websitesp() {

        var websp = $('#txtwebsite').val();
        $.post('/CompanyProfile/WEBlvalidate', { websp: websp }, function (data) { chkwebsp(data); }).error(function (data) { chkwebsp(data); });
    }

    function chkwebsp(abc) {

