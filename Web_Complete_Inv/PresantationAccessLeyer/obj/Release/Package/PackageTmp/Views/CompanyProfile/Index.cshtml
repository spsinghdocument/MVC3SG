        txtaddress.value = ""; txtbankdetails.value = ""; txtcompanyname.value = ""; txtcontactno.value = ""; txtemailid.value = "";
        txtpanno.value = ""; txtpersonincharge.value = ""; txtsupportno.value = "";
        txttaxno.value = ""; txtwebsite.value = "";
    }
   
