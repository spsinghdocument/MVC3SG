@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>SG Telecom</title>
     <link rel="shortcut icon" href="../../Images/sgnew logo.jpg" type="image/x-icon" /> 
    <link href="../../Login/StyleSheet.css" rel="stylesheet" type="text/css" />
 <script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>

    <script type="text/javascript" >

        function UserCheck() {

            var userId = $('#txtUserName').val();
            var password = $('#txtPassword').val();
            var url = '@Url.Action("LoginValidate", "Login")';
            $.post(url, { Ucode: userId, Password: password }, function (data) { chk(data); }).error(function (data) { chk(data); });
        }

        function chk(abc) {

            if (abc == "User and Password Invalid") {
                alert(abc);
                return false;
            }
            else {

                var url = '@Url.Action("Index", "Home")';
                document.location = url;
                return false;
            }

        }

        function btnemail() {
            //            window.location.href("Index", "SendMailer");
            var url = '@Url.Action("Index", "SendMailer")';
            document.location = url;
        }


        function forget_pass() {

            $('#div_pv').load('@Url.Action("E_mail", "Email")');
//            var url = 'Url.Action("E_mail", "Email")';
//            document.location = url;
          
        }

       
       
    </script>
</head>
<body>
       <div id="wrapper">

	<form name="login-form" class="login-form" action="" method="post" runat="server">
	
		<div class="header">
        <div align="center" style= "width:100% ;" >
        <div   style= "width:50% ; height:91%; border: 1px solid #164a9c; border-radius: 15px; ">
        <img src ="../../Images/sgnew logo.jpg"  style = "width:90% ; height :90px" />
        </div></div>
		<h1 style="text-align:center;">S.G.TELECOM</h1>
		<span></span>
		</div>
	
		<div class="content">
		<input name="username" id="txtUserName" value="admin" type="text" class="input username" placeholder="Username" />
		<div class="user-icon"></div>
		<input name="password" id="txtPassword"  value = "sgtele#321" type="password" class="input password" placeholder="Password" />
		<div class="pass-icon"></div>		
		</div>

		<div class="footer">
		<input type="button" name="button" onclick="UserCheck();" value="Login" class="button" />
		<input type="button" name="button" onclick = "forget_pass();"   value="Password" class="register" />
       
		</div>
	@* <div>
        <img src ="../../Images/Address Img11 -.jpg" style = "width:100% ; height :30px" />
